source 'http://rubygems.org'

gem 'rails', '3.2.1'

group :development, :test do
  gem 'ruby-debug19', require: 'ruby-debug'
  gem 'sqlite3'
  gem 'unicorn'
end

group :production do
  gem 'mysql2'
  gem 'therubyracer'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'authlogic'
gem 'cancan'
gem 'decent_exposure'
gem 'dynamic_form'
gem 'haml'
gem 'jquery-rails'
gem 'yaml_db'
gem 'will_paginate'
