<h2>Change Password</h2>
<% form_for @admin do |f| -%>
  <%= f.error_messages %>
  <p>
    <%= f.label :password, "New Password" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm New Password" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Change Password" %></p>
<% end -%>