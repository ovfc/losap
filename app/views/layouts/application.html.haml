!!! Strict
%html(xmlns='http://www.w3.org/1999/xhtml' xml:lang='en' lang='en')
  %head
    %meta(http-equiv='content-type' content='text/html;charset=UTF-8')
    %title OVFC Losap
    = stylesheet_link_tag 'jquery-ui-1.8.custom'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.4.2.min'
    = javascript_include_tag 'jquery-ui-1.8.custom.min'
    = javascript_include_tag 'application'
    - unless current_admin
      = javascript_include_tag 'jquery.idle-timer'
      = javascript_include_tag 'timer'
    = yield :head
    = yield_authenticity_token
  %body
    #main.rounded
      = yield
    = render :partial => 'shared/flash_notice'
    = render :partial => 'shared/flash_warning'
