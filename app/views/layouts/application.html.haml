!!! Strict
%html(xmlns='http://www.w3.org/1999/xhtml' xml:lang='en' lang='en')
  %head
    %meta(http-equiv='content-type' content='text/html;charset=UTF-8')
    %title OVFC Losap
    = stylesheet_link_tag 'jquery-ui-1.8.custom', cache: true
    = stylesheet_link_tag 'application', cache: true
    = javascript_include_tag :defaults, cache: true
    = javascript_include_tag 'jquery-ui-1.8.custom.min', cache: true
    - unless current_admin
      = javascript_include_tag 'jquery.idle-timer'
      = javascript_include_tag 'timer'
    = csrf_meta_tag
    = yield :head
  %body
    #main.rounded
      = yield
    = render :partial => 'shared/flash_notice'
    = render :partial => 'shared/flash_warning'
