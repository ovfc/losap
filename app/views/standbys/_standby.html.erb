<% if standby.deleted? -%>
<span class="deleted"><%= render :partial => 'standbys/times', :locals =>
 {:standby => standby} %></span>
<% unless standby.locked? -%>
(<%= link_to 'Undelete', [@member, standby], :class => :undelete_standby
  %>)
<% end -%>
<% 
   elsif standby.short?
     @standbywarning = true
 -%>
<span class="shortstandby">
<%= render :partial => 'standbys/times', :locals => {:standby =>
standby} %> 
<% unless standby.locked? -%>
(<%= link_to 'Delete', [@member, standby], :class => :delete_standby %>)
<% end -%>
*</span>
<% else -%>
<%= render :partial => 'standbys/times', :locals => {:standby =>
standby} %>
<% unless standby.locked? -%>
(<%= link_to 'Delete', [@member, standby], :class => 'delete_standby'
%>)
<% end -%>
<% end -%>

