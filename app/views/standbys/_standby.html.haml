- if standby.deleted?
  %span.deleted
    = render :partial => "standbys/times", :locals => {:standby => standby}
  - unless standby.locked?
    (#{link_to 'Undelete', [@member, standby], :class => :undelete_standby})
- elsif standby.short?
  - @standbywarning = true
  %span.shortstandby
    = render :partial => "standbys/times", :locals => {:standby => standby}
  - unless standby.locked?
    (#{link_to 'Delete', [@member, standby], :class => :delete_standby})
  *
- else
  = render :partial => "standbys/times", :locals => {:standby => standby}
  - unless standby.locked?
    (#{link_to 'Delete', [@member, standby], :class => :delete_standby})
