<% content_for :head do %>
  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag 'jquery.cookie'%>
  <%= javascript_include_tag 'admin' %>
<% end %>

<h2>LOSAP Adminstration Menu</h2>

<p>
  Admin:
  <%=h current_admin.username %>
  [<%= link_to "Change Password", edit_admin_path(current_admin) %>]
  [<%= link_to "Logout", logout_path %>]
</p>

<div id="admintabs">
  <ul id="adminmenu">
    <% if can? :read, Report %>
    <li><a href="#tab-1">Monthly Reports</a></li>
    <li><a href="#tab-2">Annual Reports</a></li>
    <% end %>
    <% if can? :manage, Member %>
    <li><a href="#tab-3">Manage Users</a></li>
    <% end %>
  </ul>
  <% if can? :read, Report %>
  <div id="tab-1">
    <%= render :partial => "monthly_reports" %>
  </div>
  <div id="tab-2">
    <%= render :partial => "reports/annual/find",
     :locals => {:years => @admin_console.years} %>
  </div>
  <% end %>
  <% if can? :manage, Member %>
  <div id="tab-3">
    <%= render :partial => 'members/index', :locals => {:members => @admin_console.members} %>
  </div>
  <% end %>
</div>

<%= render :partial => 'shared/flash_notice' %>
<%= render :partial => 'shared/flash_warning' %>

<p>&nbsp;</p>
